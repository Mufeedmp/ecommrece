<%- include("../../views/partials/admin/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Coupon Management</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<style>
.error-message {
    color: red;
    font-size: 12px;
    margin-top: 5px;
  }
</style>
  
  
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Coupons</h1>

    <a href="/admin/addCoupon" 
    class="btn btn-primary btn-sm" 
    style="position: absolute; top: 170px; right: 10px;">
    Add Coupon
 </a>


    <div class="right mt-5">
      <div class="card-header">
        <h4>Available Coupons</h4>
      </div>
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Coupon Code</th>
              <th>Discount </th>
              <th>Expiry Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="couponTableBody">
            <tr>
              <% coupon.forEach(coupon => { %>
                <tr>
                  <td><%= coupon.name %></td>
                  <td>â‚¹<%= coupon.offerPrice %></td>
                  <td><%= coupon.expireOn.toDateString() %></td>
                  <td>
                    <form action="/admin/deleteCoupon" method="post" style="display: inline;">
                      <input type="hidden" name="couponId" value="<%= coupon.id %>">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
           
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="pagination-container" style="text-align: center;">
    <% if (currentPage > 1) { %>
    <a href="?page=<%= currentPage - 1 %>">&laquo; Previous</a>
    <% } %> <% for (let i = 1; i <= totalPages; i++) { %> <% if (i ===
    currentPage) { %>
    <span class="current-page"><%= i %></span>
    <% } else { %>
    <a href="?page=<%= i %>"><%= i %></a>
    <% } %> <% } %> <% if (currentPage < totalPages) { %>
    <a href="?page=<%= currentPage + 1 %>">Next &raquo;</a>
    <% } %>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>
<script>
  const createCoupon = async () => {

  const couponData = {
    couponCode: document.getElementById('couponCode').value,
    discount: document.getElementById('discount').value,
    minPrice: document.getElementById('minPrice').value,
    expiryDate: document.getElementById('expiryDate').value,
  };


  document.getElementById('couponCodeError').innerHTML = '';
  document.getElementById('discountError').innerHTML = '';
  document.getElementById('minPriceError').innerHTML = '';
  document.getElementById('expiryDateError').innerHTML = '';

  let isValid = true;

  
  if (!couponData.couponCode || couponData.couponCode.trim() === '') {
    document.getElementById('couponCodeError').innerHTML = 'Coupon code is required.';
    isValid = false;
  }


  if (!couponData.discount || couponData.discount <= 0) {
    document.getElementById('discountError').innerHTML = 'Discount value should be greater than 0.';
    isValid = false;
  }

  
  if (!couponData.minPrice || couponData.minPrice <= 0) {
    document.getElementById('minPriceError').innerHTML = 'Minimum price should be greater than 0.';
    isValid = false;
  }


  if (!couponData.expiryDate) {
    document.getElementById('expiryDateError').innerHTML = 'Expiry date is required.';
    isValid = false;
  }


  if (!isValid) return;

  try {
    const response = await fetch('/admin/createCoupon', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(couponData),
    });

    const result = await response.json();
    console.log(result);
    if (response.ok) {
      Swal.fire({
        icon: 'success',
        title: 'Coupon Created!',
        text: result.message || 'Your coupon has been created successfully.',
      }).then(() => {

        window.location.href = "/admin/coupons";  
      });
    } else {
      Swal.fire({
        icon: 'error',
        title: 'Error!',
        text: result.message || 'Something went wrong. Please try again.',
      });
    }
  } catch (error) {
    console.error('Error creating coupon:', error);
    Swal.fire({
      icon: 'error',
      title: 'Network Error',
      text: 'Could not connect to the server. Please check your connection.',
    });
  }
};

</script>