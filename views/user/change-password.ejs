<body>


    <%- include("../../views/partials/user/header") %>
    <section class="content-main mt-80 mb-80">
       <div class="card mx-auto card-login" style="max-width: 400px;">
           <div class="card-body">
               <h4 class="card-title mb-4 text-center">Change Password</h4>
               <form method="post" action="/change-password" onsubmit="return validateForm()">
                   <div class="mb-3 position-relative">
                       <input class="form-control" name="currentPass" id="currentPass" placeholder="Enter Current password" type="password"  style="border: 1px solid #ced4da;">
                       <div id="currentPassError" class="text-danger position-absolute" style="bottom: -20px; left: 0;"></div>
                   </div>
                   <div class="mb-3 position-relative">
                       <input class="form-control" name="newPass" id="newPass2" placeholder="Enter new password" type="password"  style="border: 1px solid #ced4da;">
                       <div id="newPass2Error" class="text-danger position-absolute" style="bottom: -20px; left: 0;"></div>
                   </div>
                   <div class="mb-3 position-relative">
                    <input class="form-control" name="confirmPass" id="newPass3" placeholder="Re-enter new password" type="password"  style="border: 1px solid #ced4da;">
                    <div id="newPass3Error" class="text-danger position-absolute" style="bottom: -20px; left: 0;"></div>
                </div>
                   <div class="mb-4">
                       <button type="submit" class="btn btn-primary w-100">Change Password</button>
                   </div>
                         <% if (locals.message && message.length > 0) { %>
                       <div id="alertMessage" class="alert alert-danger text-center">
                           <%= message %>
                       </div>
                   <% } %>
               </form>
               <p class="text-center mt-4">Don't have an account? <a href="/signup">Sign up</a></p>
           </div>
       </div>
    </section>
    <%- include("../../views/partials/user/footer") %>
    <script>
function validateForm() {
       let valid = true;
       const currentPass = document.getElementById('currentPass');
       const newPass2 = document.getElementById('newPass2');
       const newPass3 = document.getElementById('newPass3');
       const currentPassError = document.getElementById('currentPassError');
       const newPass2Error = document.getElementById('newPass2Error');
       const newPass3Error = document.getElementById('newPass3Error');
    
       currentPassError.textContent = '';
       newPass2Error.textContent = '';
       newPass3Error.textContent = '';


       if(!currentPass.value.trim()){
        currentPassError.textContent='Current password is required.'
        valid = false;

    } else if (currentPass.value.length < 8) {
        currentPassError.textContent = 'Current password should be at least 8 characters.';
        valid = false;
    }
    
       if (!newPass2.value.trim()) {
           newPass2Error.textContent = 'New Password cannot be empty.';
           valid = false;
       } else if (newPass2.value.length < 8) {
           newPass2Error.textContent = 'New Password must be at least 6 characters.';
           valid = false;
       }
    
       if (!newPass3.value.trim()) {
           newPass3Error.textContent = 'Please re-enter your New  password.';
           valid = false;
       } else if (newPass3.value !== newPass2.value||newPass2.value.length < 8) {
           newPass3Error.textContent = 'Passwords do not match.';
           valid = false;
       }
       return valid;
    }

    </script>
    
    
    

