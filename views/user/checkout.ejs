  document.addEventListener('DOMContentLoaded', () => {
  
    const useSavedAddressCheckbox = document.getElementById('use-saved-address');
    const savedAddressesSection = document.getElementById('saved-addresses-checkboxes');
    const addressFields = document.querySelectorAll('.checkout__input input');

    const toggleAddressInput = () => {
      if (useSavedAddressCheckbox.checked) {
        savedAddressesSection.style.display = 'block';
        addressFields.forEach(field => {
          field.disabled = true;
        });
      } else {
        savedAddressesSection.style.display = 'none';
        addressFields.forEach(field => {
          field.disabled = false;
        });
      }
    };
    useSavedAddressCheckbox.addEventListener('change', toggleAddressInput);

    toggleAddressInput();
  });
  
