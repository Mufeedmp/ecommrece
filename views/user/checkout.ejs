    <style>
      /* Saved Addresses Section */
      #saved-addresses-checkboxes {
        margin-top: 15px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        max-height: 300px; /* Restrict height */
        overflow-y: auto; /* Enable scrolling */
        background-color: #f9f9f9; /* Light background for better readability */
      }

      /* Individual Saved Address */
      .checkout__input__checkbox {
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #ffffff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .checkout__input__checkbox label {
        font-size: 14px;
        line-height: 1.5;
        display: block;
      }

      .checkout__input__checkbox input[type="radio"] {
        margin-right: 10px;
      }

      .checkout__input__checkbox strong {
        display: inline-block;
        width: 120px;
        font-weight: bold;
      }

      /* Add space for the address fields */
      .checkout__input__checkbox p {
        margin: 0;
      }

      .available-coupons {
  border: 1px solid #ddd;
  padding: 10px;
  color: green;
  background-color: #f9f9f9;
  border-radius: 5px;
}

.available-coupons h6 {
  font-weight: bold;
  margin-bottom: 10px;
}

.coupon-item {
  margin-bottom: 10px;
}




    </style>
  </head>
  
  <body>
    <%- include("../../views/partials/user/header") %>

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="breadcrumb__text">
              <h4>Check Out</h4>
              <div class="breadcrumb__links">
                <a href="./index.html">Home</a>
                <a href="./shop.html">Shop</a>
                <span>Check Out</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Checkout Section Begin -->
    <section class="checkout spad">
      <div class="container">
        <div class="checkout__form">
          <form method="post" action="/checkout">
            <div class="row">
              <div class="col-lg-8 col-md-6">
                <!-- Saved Address Section -->
                <div class="checkout__saved__addresses">
                  <h6 class="checkout__title">Select a Saved Address</h6>
                  <div class="checkout__input__checkbox">
                    <label for="use-saved-address">
                      Use a saved address
                      <input type="radio" id="use-saved-address">
                      <span class="checkmark"></span>
                    </label>
                  </div>
                  
                  <div  id="saved-addresses-checkboxes" style="display: none; margin-top: 15px;">
                    <% if (savedAddresses && savedAddresses.length > 0) { %>
                      <% savedAddresses.forEach((address) => { %>
                        <div class="checkout__input__checkbox">
                          <label for="saved-address-<%= address.id %>">
                            <strong>Address Type:</strong> <%= address.addressType %><br />
                            <strong>Name:</strong> <%= address.name %><br />
                            <strong>City:</strong> <%= address.city %><br />
                            <strong>Landmark:</strong> <%= address.landmark %><br />
                            <strong>State:</strong> <%= address.state %><br />
                            <strong>Pincode:</strong> <%= address.pincode %><br />
                            <strong>Phone:</strong> <%= address.phone %><br />
                            <strong>Alternate Phone:</strong> <%= address.altphone %>
                            <input type="radio" name="savedAddress" id="saved-address-<%= address.id %>" value="<%= address.id %>">
                            <span class="checkmark"></span>
                          </label>
                        </div>
                      <% }) %>
                    <% } else { %>
                      <p>No saved addresses found.</p>
                    <% } %>
                  </div>
                </div>
    
                <!-- Billing Details Section -->
                <h6 class="checkout__title" style="margin-top: 30px;">Billing Details</h6>
                <div class="row">
                  <div class="col-lg-6">
                    <div class="checkout__input">
                      <p>Address Type<span>*</span></p>
                      <input type="text" name="addressType">
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="checkout__input">
                      <p>Name<span>*</span></p>
                      <input type="text" name="name">
                    </div>
                  </div>
                </div>
                <div class="checkout__input">
                  <p>City<span>*</span></p>
                  <input type="text" name="city">
                </div>
                <div class="checkout__input">
                  <p>Landmark<span>*</span></p>
                  <input type="text" name="landmark">
                </div>
                <div class="checkout__input">
                  <p>State<span>*</span></p>
                  <input type="text" name="state">
                </div>
                <div class="checkout__input">
                  <p>Pincode<span>*</span></p>
                  <input type="text" name="pincode">
                </div>
                <div class="checkout__input">
                  <p>Phone<span>*</span></p>
                  <input type="text" name="phone">
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <div class="checkout__input">
                      <p>AltPhone<span>*</span></p>
                      <input type="text" name="altphone">
                    </div>
                  </div>
                </div>
              </div>
    
              <!-- Right Column (Apply Coupon and Your Order Sections) -->
              <div class="col-lg-4 col-md-6">
                <h6 class="coupon__code"><span class="icon_tag_alt"></span>
                  Have a coupon?
                  <form id="applyCouponForm">
                    <input type="text" name="code" id="coupon-code" placeholder="Coupon code">
                    <input type="hidden" id="cart-total" value="<%= cart.cartTotal %>">
                    <button type="button" onclick="applyCoupon()">Apply</button>
                  </form>
                </h6>
    
                <div class="available-coupons" style="margin-top: 15px;">
                  <h6>Available Coupons</h6>
                  <ul id="coupon-list" style="max-height: 140px; overflow-y: auto; border: 1px solid #ddd; padding: 10px; background-color: #f9f9f9; border-radius: 5px;">
                    <% if (coupons && coupons.length > 0) { %>
                      <% coupons.forEach(coupon => { %>
                        <li class="coupon-item">
                          <strong><%= coupon.name %></strong> - Min Purchase ₹<%= coupon.minPrice %>
                        </li>
                      <% }); %>
                    <% } else { %>
                      <p>No coupons available at the moment.</p>
                    <% } %>
                  </ul>
                </div>
    
                <div class="checkout__order">
                  <h4 class="order__title">Your order</h4>
                  <div class="checkout__order__products">Product <span>Total</span></div>
                  <% cartItems.forEach((item) => { %>
                    <ul class="checkout__total__products">
                      <li><%= item.productName %> <span>₹ <%= item.totalPrice %></span></li>
                    </ul>
                  <% }) %>
                  <ul class="checkout__total__all">
                    <li>Subtotal <span>₹<%= cart.cartTotal %></span></li>
                    <li>Discount <span id="total-discount" name="discount"></span></li>
                    <li>Total <span id="cart-total-display">₹<%= cart.cartTotal %></span></li>
                  </ul>
                  <input type="hidden" id="discount-amount" name="discount">

                  <div class="checkout__input__checkbox">
                    <label for="cod">
                      Cash On Delivery
                      <input type="radio" id="cod" name="paymentMethod" value="COD" required>
                      <span class="checkmark"></span>
                    </label>
                  </div>
                  <div class="checkout__input__checkbox">
                    <label for="paypal">
                      Online Payment
                      <input type="radio" id="paypal" name="paymentMethod" value="online">
                      <span class="checkmark"></span>
                    </label>
                  </div>
                  <button id="pay-btn" type="submit" class="site-btn">PLACE ORDER</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>
    
    <%- include("../../views/partials/user/footer") %>

    <div class="search-model">
      <div class="h-100 d-flex align-items-center justify-content-center">
        <div class="search-close-switch">+</div>
        <form class="search-model-form">
          <input type="text" id="search-input" placeholder="Search here.....">
        </form>
      </div>
    </div>

    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.nice-select.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/jquery.countdown.min.js"></script>
    <script src="/js/jquery.slicknav.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


   
  </body>
</html>
<script>
const cartTotal = JSON.parse('<%= JSON.stringify(cart.cartTotal) %>') *100


const userName = '<%= user.name %>';
  const userEmail = '<%= user.email %>';
  const userContact = '<%= user.phone %>';


  document.addEventListener('DOMContentLoaded', () => {
  
    const useSavedAddressCheckbox = document.getElementById('use-saved-address');
    const savedAddressesSection = document.getElementById('saved-addresses-checkboxes');
    const addressFields = document.querySelectorAll('.checkout__input input');

    const toggleAddressInput = () => {
      if (useSavedAddressCheckbox.checked) {
        savedAddressesSection.style.display = 'block';
        addressFields.forEach(field => {
          field.disabled = true;
        });
      } else {
        savedAddressesSection.style.display = 'none';
        addressFields.forEach(field => {
          field.disabled = false;
        });
      }
    };
    useSavedAddressCheckbox.addEventListener('change', toggleAddressInput);

    toggleAddressInput();
  });
  
  document.getElementById("pay-btn").onclick = async function (event) {
    event.preventDefault(); 

  
    const selectedPaymentMethod = document.querySelector('input[name="paymentMethod"]:checked');
    if (!selectedPaymentMethod) {
      alert("Please select a payment method!");
      return;
    }

    const form = document.querySelector("form"); 

    if (selectedPaymentMethod.value === "COD") {
   
      form.action = "/checkout"; 
      form.method = "POST";
      form.submit();
    } else if (selectedPaymentMethod.value === "online") {

      const formData = new FormData(form);

      const data = {};
    formData.forEach((value, key) => {
      data[key] = value;
    });

    
    const { savedAddress, paymentMethod } = data;
    const discount = document.getElementById('discount-amount')?.value || 0;
      const orderResponse = await fetch("/create-order", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ amount: cartTotal,savedAddress, paymentMethod,discount }),
      });
console.log('discount',discount);

    const orderData = await orderResponse.json();
    console.log(orderData.id)
    console.log(orderData.razorPayOrder)
    const options = {
      key: "rzp_test_NwltbJ8WRRxJmi", 
      amount: orderData.amount, 
      currency: orderData.currency,
      name: "GENTS CLUB", 
      description: "Test Transaction",
      image: "/img/logo.png",
      order_id: orderData.id, 
      handler: function (response) {
       
        
        fetch("/verify-payment", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({response}),
        })
        .then(response => {
          if(!response.ok) {
            throw new Error('razorpay error')
          }
          return response.json()
        })
        .then(data => {
          Swal.fire({
        title: 'Payment Successful!',
        text: data.message || 'Your payment has been processed successfully.',
        icon: 'success',
        confirmButtonText: 'Go to Orders',
      }).then((result) => {
        if (result.isConfirmed) {
         
          window.location.href = "/orderSuccess"; 
        }
      });
        })
        .catch(error => {
          Swal.fire({
      title: 'Payment Failed',
      text: error.message || 'Something went wrong during payment verification.',
      icon: 'error',
      confirmButtonText: 'Try Again',
    });
        })
      },
      prefill: {
        name: userName,
      email: userEmail,
      contact: userContact,
      },
      theme: {
        color: "#3399cc",
      },
    };

    const rzp = new Razorpay(options);
    rzp.open();
  };
}

async function applyCoupon() {
  const couponCode = document.getElementById('coupon-code').value.trim();
  const cartTotal = parseFloat(document.getElementById('cart-total').value);

  
  if (!couponCode) {
    Swal.fire('Error', 'Please enter a coupon code.', 'error');
    return;
  }
  
  try {
    const response = await fetch('/applyCoupon', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ code: couponCode, cartTotal }),
    });

    const result = await response.json();

    if (response.ok) {
      Swal.fire('Success', result.message, 'success');
      document.getElementById('total-discount').textContent = `₹${result.discount}`;
      document.getElementById('cart-total-display').textContent = `₹${result.newTotal}`;

      document.getElementById('discount-amount').value = result.discount;

    } else {
      Swal.fire('Error', result.message, 'error');
    }
  } catch (error) {
    Swal.fire('Error', 'Something went wrong. Please try again.', 'error');
    console.log('error',error);
    
  }
}

</script>
