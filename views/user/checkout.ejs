let isCouponApplied = false;
        
        async function handleCoupon() {
            const couponButton = document.getElementById('couponButton');
            
            if (!isCouponApplied) {
                // Apply coupon
                await applyCoupon();
            } else {
                // Remove coupon
                resetCoupon();
            }
        }

        async function applyCoupon() {
            const couponCode = document.getElementById('coupon-code').value.trim();
            const cartTotal = parseFloat(document.getElementById('cart-total').value);
            const couponButton = document.getElementById('couponButton');
            const couponInput = document.getElementById('coupon-code');

            if (!couponCode) {
                Swal.fire('Error', 'Please enter a coupon code.', 'error');
                return;
            }

            try {
                const response = await fetch('/applyCoupon', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ code: couponCode, cartTotal }),
                });

                const result = await response.json();

                if (response.ok) {
                    Swal.fire('Success', result.message, 'success');
                    document.getElementById('total-discount').textContent = `‚Çπ${result.discount}`;
                    document.getElementById('cart-total-display').textContent = `‚Çπ${result.newTotal}`;
                    document.getElementById('discount-amount').value = result.discount;
                    

                    // Update UI for applied coupon
                    isCouponApplied = true;
                    couponInput.disabled = true;
                    couponButton.textContent = 'Remove';
                    couponButton.classList.remove('btn-primary');
                    couponButton.classList.add('btn-danger');
                } else {
                    Swal.fire('Error', result.message, 'error');
                }
            } catch (error) {
                Swal.fire('Error', 'Something went wrong. Please try again.', 'error');
                console.log('error', error);
            }
        }

        function resetCoupon() {
            const couponInput = document.getElementById('coupon-code');
            const couponButton = document.getElementById('couponButton');
            const cartTotal = parseFloat(document.getElementById('cart-total').value);
            // Reset all values
            isCouponApplied = false;
            couponInput.disabled = false;
            couponInput.value = '';
            couponButton.textContent = 'Apply';
            couponButton.classList.remove('btn-danger');
            couponButton.classList.add('btn-primary');
            
            // Reset discount and total displays
            document.getElementById('total-discount').textContent = '';
            document.getElementById('cart-total-display').textContent = `‚Çπ${cartTotal}`;
            document.getElementById('discount-amount').value = '0';
        }

